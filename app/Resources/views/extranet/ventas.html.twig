{% extends 'extranet.html.twig' %}

{% block id 'oferta' %}
{% block title %}Ventas de la oferta {{ oferta.nombre }}{% endblock %}

{% block article %}
    <h1>{{ block('title') }}</h1>

    <table>
        <thead>
            <tr>
                <th>DNI</th>
                <th>Nombre y apellidos</th>
                <th>Fecha venta</th>
            </tr>
        </thead>

        <tbody>
            {% set total = 0 %}
            {% for venta in ventas %}
                <tr>
                    <td>{{ venta.usuario.dni }}</td>
                    <td>{{ venta.usuario.nombre ~ ' ' ~ venta.usuario.apellidos }}</td>
                    <td>{{ venta.fecha|localizeddate('long', 'medium') }}</td>
                </tr>
                {% set total = total + venta.oferta.precio %}
            {% endfor %}
            <tr>
                <th>TOTAL</th>
                <td>{{ total }} &euro;</td>
                <td>{{ ventas|length }} ventas</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
